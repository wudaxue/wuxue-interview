{
  "$schema": "https://biomejs.dev/schemas/2.2.0/schema.json",
  "assist": { "actions": { "source": { "organizeImports": "on" } } },
  "files": {
    "includes": [
      "**",
      "!**/node_modules",
      "!**/dist",
      "!**/out",
      "!**/build",
      "!**/public",
      "!**/tsconfig.*",
      "!**/.vscode",
      "!**/.nx",
      "!**/components/ui/**/*.tsx"
    ]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "a11y": {
        "useKeyWithClickEvents": "off"
      },
      "nursery": {
        "useSortedClasses": {
          "level": "error",
          "fix": "safe",
          "options": {
            "attributes": ["className", "classList"],
            "functions": ["clsx", "cva", "tw", "cn"]
          }
        }
      },
      "suspicious": {
        "noEmptyInterface": "off",
        "noArrayIndexKey": "warn",
        "noExplicitAny": "off",
        "noConsole": { "level": "off", "options": { "allow": ["log"] } }
      },
      "recommended": true,
      "correctness": {
        "noChildrenProp": "off",
        "noUnusedVariables": "warn",
        "useExhaustiveDependencies": "off"
      },
      "complexity": {
        "noForEach": "off"
      },
      "style": {
        "useBlockStatements": "off",
        "noNonNullAssertion": "off"
      },
      "performance": {
        "noDelete": "off"
      }
    }
  },
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2,
    "enabled": true,
    "lineWidth": 100
  },
  "javascript": {
    "jsxRuntime": "reactClassic",
    "formatter": {
      "quoteStyle": "single",
      "jsxQuoteStyle": "single",
      "semicolons": "asNeeded"
    }
  }
}
